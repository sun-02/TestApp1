<resources>
    <!-- Base application theme. -->
    <style name="Theme.TestApp1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_500</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="android:colorBackground">@android:color/holo_orange_light</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- App bar style. -->
        <item name="android:actionBarStyle">@style/Widget.TestApp1.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.TestApp1.ActionBar</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/Widget.TestApp1.SmallShapeAppearance
        </item>
        <item name="shapeAppearanceMediumComponent">@style/Widget.TestApp1.MediumShapeAppearance
        </item>

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Widget.TestApp1.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">""</item>
        <!--        <item name="android:color">@android:color/transparent</item>-->
        <!--        <item name="backgroundColor">@android:color/transparent</item>-->
        <!--        <item name="backgroundTint">@android:color/transparent</item>-->
        <!--        <item name="android:backgroundTint">@android:color/transparent</item>-->
    </style>

    <style name="Widget.TestApp1.SmallShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.TestApp1.MediumShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
    </style>

    <style name="Widget.TestApp1.CardView" parent="CardView">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="CampaignImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProductImageName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="Widget.TestApp1.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <!--        <item name="android:layout_marginTop">@dimen/margin_small</item>-->
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:minHeight">@dimen/et_height</item>
    </style>

    <style name="Widget.TestApp1.TextView.Base" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:attr/colorForeground</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Widget.TestApp1.TextView.ProductName" parent="Widget.TestApp1.TextView.Base">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.TestApp1.TextView.ProductPrice" parent="Widget.TestApp1.TextView.ProductName">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.TestApp1.TextView.Main" parent="Widget.TestApp1.TextView.Base">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
    </style>

    <style name="Widget.TestApp1.TextView.Main.Cashback">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:textColor">?android:attr/colorBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/cashback_height</item>
        <item name="android:layout_gravity">bottom|start|left</item>
        <item name="android:background">@drawable/cashback_background</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="Widget.TestApp1.TextView.Main.Cashback.Details">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/margin_small_plus</item>
        <item name="android:paddingEnd">@dimen/margin_small_plus</item>
        <item name="android:layout_height">@dimen/cashback_height_plus</item>
        <item name="android:background">@drawable/cashback_background_plus</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="Widget.TestApp1.TextView.Main.EditTextLabel">
        <item name="android:layout_marginTop">@dimen/margin_large_plus</item>
    </style>

    <style name="Widget.TestApp1.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/margin_huge_plus</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_huge_plus</item>
    </style>

    <style name="Widget.TestApp1.Button.Buy">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>


    <style name="TextAppearance.TestApp1.Headline4.5" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/headline4_5_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TestApp1.Subtitle1.Bold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TestApp1.Body1.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TestApp1.Body01" parent="TextAppearance.TestApp1.Body0">
        <item name="android:textSize">@dimen/body01_size</item>
    </style>

    <style name="TextAppearance.TestApp1.Body01.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TestApp1.Body0" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/body0_size</item>
    </style>

    <style name="TextAppearance.TestApp1.Body00" parent="TextAppearance.TestApp1.Body0">
        <item name="android:letterSpacing">@integer/body00_letter_spacing</item>
    </style>

    <style name="TextAppearance.TestApp1.Body00.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TestApp1.Body000" parent="TextAppearance.TestApp1.Body00">
        <item name="android:textSize">@dimen/body000_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.TestApp1.Body000.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TestApp1.Body0000" parent="TextAppearance.TestApp1.Body000">
        <item name="android:textSize">@dimen/body0000_size</item>
    </style>

    <style name="TextAppearance.TestApp1.Body0000.Bold">
        <item name="android:textStyle">bold</item>
    </style>



    <style name="TextAppearance.TestApp1.Body1" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="Theme.TestApp1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestApp1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestApp1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>